<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.0.6.9</Version>
    <Company>Mixcore</Company>
    <Authors>Mixcore Team, Smileway Team</Authors>
    <Product>Mixcore Heart</Product>
    <Copyright>Mixcore, Smileway, Befirst.Solution</Copyright>
    <PackageLicenseUrl>https://github.com/mixcore/mix.heart/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>http://mixcore.org/</PackageProjectUrl>
    <PackageIconUrl>https://avatars1.githubusercontent.com/u/41290098</PackageIconUrl>
    <RepositoryUrl>https://github.com/mixcore/mix.heart</RepositoryUrl>
    <PackageTags>dotnet core, asp.net core, framework base</PackageTags>
    <AssemblyVersion>0.0.6.9</AssemblyVersion>
    <FileVersion>0.0.6.9</FileVersion>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="UI\Core\SignalR\BaseSignalRHub.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="10.1.1" />
    <PackageReference Include="EPPlus" Version="5.4.0" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Features" Version="3.1.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="3.1.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="3.1.3" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.3" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
    <PackageReference Include="System.Net.Requests" Version="4.3.0" />
    <PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Common\Helper\CommonHelper.cs">
      <ExcludeFromSourceAnalysis>False</ExcludeFromSourceAnalysis>
      <ExcludeFromStyleCop>False</ExcludeFromStyleCop>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UI\Core\SignalR\" />
  </ItemGroup>
</Project>
